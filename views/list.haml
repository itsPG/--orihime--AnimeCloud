!!!
%html
  %head
    %title Welcome
    %script{ src: '//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js', type: 'text/javascript' }
    %script{ src: "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js", type: "text/javascript"}
    %link{ href:"//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css", rel:"stylesheet"}
    %link{ href:"/views/PG.css", rel:"stylesheet"}
    %script{ src: "/views/list.js", type: "text/javascript"}

    -# javascript filter (and others)
    -# support arbitrary whitespace
  %body
    %div.container
      %table.table.table-hover
        - for (var i = 0, j = 0, jp = 0; i < anime_list.length; i++)
          %tr
            %th{colspan: 13}= anime_list[i].name
          - for (jp = 1; jp < anime_list[i].max_vol; jp += 13)
            %tr
              - for (j = jp; j <= anime_list[i].max_vol && j < jp + 13 ; j++)
                %td
                  - if (!anime_list[i].data[j].empty)
                    %a{ href: anime_list[i].data[j].download_path, delta: anime_list[i].data[j].delta}=anime_list[i].data[j].vol
                  - if (anime_list[i].data[j].empty)
                    %span= (j < 10 ? "0"+j : ""+j)




    
